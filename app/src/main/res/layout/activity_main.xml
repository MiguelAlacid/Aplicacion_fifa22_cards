<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/listaColores"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:entries="@array/jugadores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Edad"
        android:layout_width="77dp"
        android:layout_height="26dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="84dp"
        android:text="@string/edad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaColores" />

    <TextView
        android:id="@+id/posicion"
        android:layout_width="79dp"
        android:layout_height="25dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="28dp"
        android:text="@string/posicion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edad" />

    <TextView
        android:id="@+id/Media"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="@string/media"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posicion" />

    <TextView
        android:id="@+id/Precio"
        android:layout_width="80dp"
        android:layout_height="23dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:text="@string/precio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Media" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>